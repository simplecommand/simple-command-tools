<?xml version="1.0" encoding="ISO-8859-1" ?>
<process xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="simplecommandframework.xsd">
	<action class="de.neusta.processdemo.commands.StartCommand" id="Start">
       <transition name="OK" to="CustomerExists"/>
	</action>
    <action class="de.neusta.processdemo.commands.CustomerExistsCommand" id="CustomerExists">
       <transition name="Ja" to="SendNewsletter"/>
       <transition name="Nein" to="AddCustomer"/>
    </action>
    <action class="de.neusta.processdemo.commands.SendNewsletterCommand" id="SendNewsletter">
       <transition name="OK" to="END"/>
    </action>
    <action class="de.neusta.processdemo.commands.AddCustomerCommand" id="AddCustomer">
       <transition name="OK" to="END"/>
    </action>
    <action class="de.mwolff.commons.command.DefaultEndCommand" id="END"/>
</process>
